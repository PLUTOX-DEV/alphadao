{
  "compilerOptions": {
    // Target modern JS
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",

    // Output
    "outDir": "dist",
    "rootDir": "src",

    // Declarations for type consumers
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // Base URL & paths for imports
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    },

    // Type roots
    "typeRoots": ["./node_modules/@types", "./src/types"],

    // Enforce good practices
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
